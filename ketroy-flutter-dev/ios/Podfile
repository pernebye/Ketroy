# Uncomment this line to define a global platform for your project
platform :ios, '15.6'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  
end

post_install do |installer|
  # Получаем команду разработчика из основного проекта Runner
  runner_project_path = File.join(File.dirname(File.realpath(__FILE__)), 'Runner.xcodeproj', 'project.pbxproj')
  development_team = nil
  
  if File.exist?(runner_project_path)
    runner_project_content = File.read(runner_project_path)
    # Ищем команду разработчика в Debug конфигурации Runner
    match = runner_project_content.match(/97C147061CF9000F007C117D.*?DEVELOPMENT_TEAM = ([A-Z0-9]+);/m)
    development_team = match[1] if match
    
    # Если не нашли, используем YUR96P457N как fallback (команда с Apple Developer аккаунтом)
    development_team ||= 'YUR96P457N'
  else
    development_team = 'YUR96P457N'
  end
  
  # Устанавливаем настройки для всех pods
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.6'
      # Отключаем подпись для Pods - они не требуют подписи
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      # Убираем команду разработчика для Pods
      config.build_settings.delete('DEVELOPMENT_TEAM')
      config.build_settings.delete('CODE_SIGN_IDENTITY')
      config.build_settings.delete('CODE_SIGN_STYLE')
      
      # ✅ Исправление для share_plus и других плагинов с модульными заголовками
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    end
  end
  
  # ✅ Отключаем верификацию модулей для share_plus (исправление ошибки Flutter/Flutter.h)
  installer.pods_project.targets.each do |target|
    if target.name == 'share_plus'
      target.build_configurations.each do |config|
        config.build_settings['DEFINES_MODULE'] = 'NO'
        config.build_settings['SWIFT_COMPILATION_MODE'] = 'wholemodule'
      end
    end
  end
  
  # Убеждаемся, что основной проект Runner использует правильную команду
  if File.exist?(runner_project_path)
    runner_project_content = File.read(runner_project_path)
    # Заменяем все команды на найденную команду
    runner_project_content.gsub!(/DEVELOPMENT_TEAM = [A-Z0-9]+;/, "DEVELOPMENT_TEAM = #{development_team};")
    File.write(runner_project_path, runner_project_content)
  end
end
